{
  "name": "thermopi-server",
  "version": "1.0.0",
  "description": "thermopi-server is the nodejs backend to host the thermopi Vue.js frontend and manage the thermostat logic",
  "main": "index.js",
  "scripts": {
    "build": "./build.sh",
    "prestart": "./build.sh",
    "start": "node src/app.js",
    "nobuild": "node src/app.js",
    "serve": "./node_modules/nodemon/bin/nodemon.js src/app.js",
    "lint": "eslint --ignore-path ../.gitignore . --fix",
    "pretest": "eslint --ignore-path ../.gitignore .",
    "test": "jest --coverage && cat ./tests/coverage/lcov.info | coveralls",
    "test:local": "jest"
  },
  "author": "Christopher Milan",
  "license": "CC-BY-4.0",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonfile": "^5.0.0",
    "luxon": "^1.16.0",
    "morgan": "^1.9.1",
    "node-schedule": "^1.3.2",
    "nodemon": "^1.19.1",
    "onoff": "^4.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "prettier": "1.18.2"
  }
